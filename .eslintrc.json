{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "rules": {
    "indent":["error",2], //правило для задания отступов
    "quotes":["error","single"], //правило для для стиля кавычек
    "semi":["error", "always"], //правило для использования точек с запятой в конце 
    "comma-dangle":["error","always"], //правило для запятых в конце объектов
    "no-trailing-spaces": "error" //предупреждение о наличии лишних пробелов в конце строк
  }
}
